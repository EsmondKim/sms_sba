<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--JDBC Database connection settings-->
        <property name="hbm2ddl.auto">create-drop</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:tcp://localhost/~/test</property>
<!--        If you are geting Error for DriverManagerConnection, You can use below statement in for connection.url-->
<!--        <property name="connection.url">jdbc:h2:~/test</property>-->
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <!--JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">1</property>
        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>

<!--        Commenting out .sql property from SBA given code-->
<!--        <property name="hibernate.show_sql" >true </property>-->
<!--        <property name="hibernate.format_sql" >true </property>-->
<!--        Commenting out .sql property from SBA given code-->

        <!--Mapping entity file-->
        <mapping class="com.perscholas.Hib_H2memory.Student"/>
<!--        Commenting out mapping classes from SBA given code-->
<!--        <mapping class="jpa.entitymodels.Student"/>-->
<!--        <mapping class="jpa.entitymodels.Course"/>-->

    </session-factory>
</hibernate-configuration>

